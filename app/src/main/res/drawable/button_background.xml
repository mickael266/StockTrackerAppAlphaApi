<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF4081" /> <!-- Set the desired color when button is pressed -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF5722" /> <!-- Set the desired color when button is not pressed -->
        </shape>
    </item>
</selector>
